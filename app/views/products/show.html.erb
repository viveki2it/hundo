<div style="min-width: 320px; max-width: 480px; margin: 0px auto;width: 100%;">
<% content_for :javascripts do %>
  <%= javascript_include_tag "https://js.stripe.com/v1/" %>
<% end %>

<% content_for :meta_tags do %>
  <%= tag :meta, name: "stripe-key", content: Settings.stripe.public_key %>
<% end %>
<br/>
<!--style="background: url(steps.png) no-repeat;"-->
<div id="step-1" class="step center"></div>

<div class="content" style="width: 100%;">
  <div class="product">
    <ul class="thumbnails">
      <% @product.images.each do |product_image|   %>
        <li class="span">
          <div class="thumbnail" style="max-width: 100px;">
            <%= image_tag(product_image.image(:thumb), :class=>"img-polaroid") %>
          </div>
        </li>
      <% end %>
      <p style="display:inline;padding-left: 10px;padding-top: -50px; width: 150px;font-family: Helvetica; font-size: 15px;color:#a1a1a1;"><%= @product.product_description %></p>
    </ul>
  </div>
</div>

<div id="buy-now" >
  <div class="content clearfix">
    Buy <%= @product.product_external_name %> now:
    <span class="full-price"><span class="dollar">$</span><span class="price"><%= @product.unit_price %></span></span>
  </div>
</div>

