<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div id="space" style="padding-top: 6%"></div>
  <div>
    <%= f.email_field :email, :autofocus => true, :placeholder => "Your email address" %></div>

  <div>
    <%= f.password_field :password, :placeholder => "Enter password" %></div>

  <div>
    <%= f.password_field :password_confirmation, :placeholder => "Confirm your password" %></div>

  <div>
    <%= f.text_field :name, :placeholder => "Your name" %></div>

  <div>
    <%= f.text_area :description, :placeholder => "A short description of your company", :cols => 2, :rows => 4 %></div>

  <div>
    <%= f.file_field :avatar %></div>


<br/>
  <div><%= f.submit "Sign up", :class => "btn btn-custom" %></div>
<% end %>

<%= render "devise/shared/links" %>
