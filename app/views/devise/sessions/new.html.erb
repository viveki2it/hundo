<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a href="/"><img src="/assets/the_hundo_new.png" height="25px" style="position: absolute;top: 50%;left: 50%;width: 200px;height: 38px;margin-top: -21px; /* Half the height */margin-left: -100px; vertical-align: middle;text-align: center;"/></a>
      <div class="nav-collapse">
        <ul class="nav">
          <% if !signed_in? %>
          <% else %>
            <li><%= image_tag(current_client.avatar.url(:thumb), :width => "50", :height => "30") %></li>
            <% if current_client %>
              <li>
                <%= link_to  current_client.name, "/" %>
              </li>
            <% end %>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <li>
            <% if signed_in? %>
              <%= link_to "Logout", destroy_client_session_path, :method => "DELETE" %>
            <% end %>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
<div id="sign_in" style="text-align: center; margin: 0 auto; 
  background: url(/assets/home_page_image.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover; height: 100%;
">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div id="space" style="padding-top: 29%"></div>
  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Your email address" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Password" %></div>

 <!-- <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display:inline; margin-top: 2px; font-family: Helvetica; font-size: 15px;"%></div>
  <% end -%>-->

  <div><%= f.submit "Login", :class => "btn btn-custom" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
